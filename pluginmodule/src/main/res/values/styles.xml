<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_anim_slide_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_anim_slide_bottom_exit</item>
    </style>


    <style name="TongsonBaseDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!--是否浮在界面上-->
        <item name="android:windowFrame">@null</item><!--是否去除边框-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowNoTitle">true</item> <!--是否有标题-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
    </style>









</resources>
